{
  "manifest_version": 2,
  "name": "LTV계산기 + KB시세 바로가기",
  "version": "2.0.0",
  "description": "LTV계산기 바로가기 및 텍스트 선택으로 KB시세 자동 검색",
  
  "permissions": [
    "contextMenus",
    "tabs",
    "activeTab"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  
  "content_scripts": [
    {
      "matches": ["*://kbland.kr/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "commands": {
    "ltv-shortcut": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "LTV계산기 바로가기"
    },
    "kb-shortcut": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "선택된 텍스트로 KB시세 검색"
    }
  }
}
